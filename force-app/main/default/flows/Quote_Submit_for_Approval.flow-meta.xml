    <apiVersion>64.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <assignments>
        <name>Set_Approval_Status</name>
        <label>Set Approval Status</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>recordId.Approval_Status__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>approvalStatus</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>recordId.Bypass_Flow__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Bypass</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Update_Quote</targetReference>
        </connector>
    </assignments>
    <choices>
        <name>orderReview</name>
        <choiceText>Submit for Order Review</choiceText>
        <dataType>String</dataType>
        <value>
            <elementReference>ORDER_APPROVAL_PROCESS_NAME</elementReference>
        </value>
    </choices>
    <choices>
        <name>proposalReview</name>
        <choiceText>Submit for Proposal Review</choiceText>
        <dataType>String</dataType>
        <value>
            <elementReference>PROPOSAL_APPROVAL_PROCESS_NAME</elementReference>
        </value>
    </choices>
    <choices>
        <name>Return_back_to_Quote</name>
        <choiceText>Return back to Quote</choiceText>
        <dataType>String</dataType>
