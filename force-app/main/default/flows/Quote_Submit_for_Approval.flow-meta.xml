        </value>
    </choices>
    <constants>
        <name>ORDER_APPROVAL_PROCESS_NAME</name>
        <dataType>String</dataType>
        <value>
            <stringValue>Quote_Order_Approval_Process1</stringValue>
        </value>
    </constants>
    <constants>
        <name>PROPOSAL_APPROVAL_PROCESS_NAME</name>
        <dataType>String</dataType>
        <value>
            <stringValue>Quote_Proposal_Approval_Process</stringValue>
        </value>
    </constants>
    <customProperties>
        <name>ScreenProgressIndicator</name>
        <value>
            <stringValue>{&quot;location&quot;:&quot;top&quot;,&quot;type&quot;:&quot;simple&quot;}</stringValue>
        </value>
    </customProperties>
    <decisions>
        <name>Selection</name>
        <label>Selection</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Redirect_to_Quote</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Return to Quote</defaultConnectorLabel>
        <rules>
            <name>Submit</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Approval_Selection</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>proposalReview</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Submit_for_Approval</targetReference>
            </connector>
            <label>Submit</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>approvalProcessName</name>
        <dataType>String</dataType>
        <expression>IF(ISPICKVAL({!recordId.Approval_Status__c},&quot;Proposal Approved&quot;)||ISPICKVAL({!recordId.Approval_Status__c},&quot;Order Rejected&quot;),{!ORDER_APPROVAL_PROCESS_NAME},{!Approval_Selection})</expression>
    </formulas>
    <formulas>
        <name>approvalStatus</name>
        <dataType>String</dataType>
        <expression>IF(
  ISPICKVAL({!recordId.Approval_Status__c}, &quot;Not Submitted&quot;) ||
  ISPICKVAL({!recordId.Approval_Status__c}, &quot;Proposal Rejected&quot;),
  &quot;Pending Proposal Approval&quot;,
  &quot;&quot;
)</expression>
    </formulas>
    <formulas>
        <name>Bypass</name>
        <dataType>Boolean</dataType>
        <expression>IF({!recordId.Bypass_Flow__c} = TRUE, FALSE,TRUE)</expression>
    </formulas>
    <interviewLabel>[Quote] Submit for Approval {!$Flow.CurrentDateTime}</interviewLabel>
